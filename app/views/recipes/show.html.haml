.page-header
  %h1.text-uppercase.text-center Recipes Details

.row
  .col-md-4.col-md-offset-4
    %p
      %strong Name: 
      #{@recipe.name}  
    %p
      %strong Preparation:
      %br
      #{@recipe.preparation}
    %p
      %strong Created On: 
      #{l(@recipe.created_at.to_date, format: :long)}
    %p
      %strong Updated On: 
      #{l(@recipe.updated_at.to_date, format: :long)}

    .text-center 
      %br   
      = link_to 'Edit', edit_recipe_path(@recipe), class: 'btn btn-primary'
      = link_to 'Back', recipes_path, class: 'btn btn-default'

